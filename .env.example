# Client environment variables for Vite
# Copy this file to .env.local or .env.development and fill in values as needed

# Base URL for your backend API (must include protocol and host)
VITE_API_BASE_URL=http://localhost:3001

# Use built-in mock auth client (true/false). Set to false when backend auth is ready
VITE_USE_MOCK_AUTH=true

# Auth/session UX timeouts in milliseconds
VITE_SESSION_TIMEOUT=3600000
VITE_MAX_LOGIN_ATTEMPTS=5

# Optional: third-party integrations (mocked in UI)
VITE_SIEM_ENDPOINT=https://siem-api.company.com/events
VITE_SIEM_API_KEY=demo-siem-key